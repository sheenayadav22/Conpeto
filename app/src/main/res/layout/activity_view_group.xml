<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.conpeto.nullpointer.conpeto.ViewGroup">


    <TextView
        android:id="@+id/group_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="150dp"
        android:text="@string/below_is_a_list_of_groups_joined" />

    <TextView
        android:id="@+id/group_List"
        android:layout_width="wrap_content"
        android:layout_below="@+id/group_description"
        android:layout_alignLeft="@id/group_description"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignStart="@id/group_description" />

    <Button
        android:id="@+id/go_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:text="@string/go_back" />
</RelativeLayout>